# ===========================================
# MTES Docker Compose Environment Example
# ===========================================
# Copy this file to .env and update with your actual values

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
APP_NAME=MTES
APP_VERSION=1.0.0

# ===========================================
# Network & Port Configuration
# ===========================================
BACKEND_PORT=3333
FRONTEND_PORT=4200

# ===========================================
# Database Configuration
# ===========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_secure_password
MONGO_DATABASE=mtes_production
MONGO_PORT=27017

# ===========================================
# Security Configuration
# ===========================================
# Generate a secure JWT secret (at least 64 characters)
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_at_least_64_characters_long

# ===========================================
# Frontend URLs
# ===========================================
# For local development/docker-compose
NEXT_PUBLIC_API_URL=http://localhost:3333
NEXT_PUBLIC_WS_URL=ws://localhost:3333
NEXT_INTERNAL_API_URL=http://backend:3333

# ===========================================
# Data Storage
# ===========================================
DATA_PATH=./data
