#
# Build the docker image with `npx nx docker-build backend`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t backend`.
# This Dockerfile assumes that the 'dist/apps/backend' directory has been populated by running 'nx build backend' (potentially with a --bundle flag) before this Docker image is built.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system backend && \
          adduser --system -G backend backend

COPY dist/apps/backend backend/
RUN chown -R backend:backend .

# Dependencies are expected to be bundled or included in the 'dist' output by the Nx build process.

CMD [ "node", "backend/main.js" ]
