# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build frontend`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 4200:4200 -t frontend`.
FROM node:22-alpine

ENV HOST=0.0.0.0
ENV PORT=4200

WORKDIR /app

RUN addgroup -S lems && adduser -S frontend -G lems

COPY dist/apps/frontend frontend
RUN chown -R frontend:lems .

# TODO: use nextjs's output: standalone when they support it.
# Currently it has a bug with NX that is unresolved.
# The result is slimming the docker from 1.7GB to 300MB

WORKDIR /app/frontend
RUN npm i --omit="dev" && npm i promise

EXPOSE 4200

CMD [ "npm", "start" ]